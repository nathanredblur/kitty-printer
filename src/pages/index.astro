---
import '../styles/global.css';
import KittyPrinter from '../islands/KittyPrinter.tsx';
import Nav from '../islands/Nav.tsx';
import DynamicManifest from '../islands/DynamicManifest.tsx';
import { __ } from '../common/i18n.tsx';

// Server-side - using default values since translations aren't loaded yet
const title = 'Kitty Printer';
const description = 'Kitty Printer: Web App for Bluetooth "Cat Printers". Print text, pictures, and much more in the future. Let\'s leverage full power of your kitty printer! Under active development.';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="description" content={description} />
		<link rel="stylesheet" href="/styles.css" />
		<title>{title}</title>
	</head>

	<body>
		<DynamicManifest client:only="preact" />
		<Nav url={Astro.request.url} client:only="preact" />
		<KittyPrinter client:only="preact" />
		<div id="keyboard-shortcuts-layer"></div>
		<script is:inline src="/accessibility.js"></script>
	</body>
</html>
